<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">VIA Hospital</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
       <li class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </li>
      
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="doctor" Match="NavLinkMatch.All">
                <span class="oi oi-medical-cross" aria-hidden="true"></span> Doctor
            </NavLink>
        </li>
        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="patient" Match="NavLinkMatch.All">
                <span class="oi oi-medical-cross" aria-hidden="true"></span> Patient
            </NavLink>
        </li>
        
        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="prescription" Match="NavLinkMatch.All">
                <span class="oi oi-medical-cross" aria-hidden="true"></span> Prescription
            </NavLink>
        </li>
        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="room" Match="NavLinkMatch.All">
                <span class="oi oi-medical-cross" aria-hidden="true"></span> Room
            </NavLink>
        </li>
      
  
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}